<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_margin="10dp"
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/swiperefresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:text="SF"
                    android:clickable="true"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:focusable="true" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="TV 영화"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="가족"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="공포"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="다큐멘터리"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minHeight="0dp"
                    android:text="드라마"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minHeight="0dp"
                    android:textColor="@color/black"
                    android:text="로맨스"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="모험"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="미스테리"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:textColor="@color/black"
                    android:minHeight="0dp"

                    android:text="범죄"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:textColor="@color/black"
                    android:minHeight="0dp"
                    android:text="서부"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minHeight="0dp"
                    android:textColor="@color/black"
                    android:text="스릴러"
                    android:textSize="12sp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:textColor="@color/black"
                    android:minHeight="0dp"
                    android:text="애니메이션"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"

                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="액션"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="역사"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="음악"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="전쟁"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minHeight="0dp"
                    android:text="코미디"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/custom_button"
                    android:minHeight="0dp"
                    android:text="판타지"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


            </LinearLayout>
        </HorizontalScrollView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <androidx.recyclerview.widget.RecyclerView
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:id="@+id/report_recyclerview1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.fragment.app.FragmentContainerView
                        android:layout_marginVertical="20dp"
                        android:id="@+id/recommend_fragment_container_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:name="com.teamfilmo.filmo.ui.report.RecommendReportFragment"
                        tools:layout="@layout/fragment_recommend_report" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/report_recyclerview2"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>



        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
